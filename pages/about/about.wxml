<!--pages/about/about.wxml-->
<view class="container">
  <view class="page-body">
    <view class="head">
      <open-data class="avatar" type="userAvatarUrl" mode="cover"></open-data>
      <open-data class="nickname" type="userNickName"></open-data>
    </view>
    <view class="config">
      <view class="color">主题颜色</view>
      <view class="skyblue" bindtap="skyblue">
        <view class="colorbox_skyblue"></view>
        <view class="text_skyblue">天空蓝</view>
        <image class="choose_skyblue" wx:if="{{choose_skyblue}}" src="../../../utils/icon/choose.png"/>
      </view>
      <view class="deepblue" bindtap="deepblue">
        <view class="colorbox_deepblue"></view>
        <view class="text_deepblue">深天蓝</view>
        <image class="choose_deepblue" wx:if="{{choose_deepblue}}" src="../../../utils/icon/choose.png"/>
      </view>
      <view class="diamondgreen" bindtap="diamondgreen">
        <view class="colorbox_diamondgreen"></view>
        <view class="text_diamondgreen">宝石绿</view>
        <image class="choose_diamondgreen" wx:if="{{choose_diamondgreen}}" src="../../../utils/icon/choose.png"/>
      </view>
      <view class="springgreen" bindtap="springgreen">
        <view class="colorbox_springgreen"></view>
        <view class="text_springgreen">草苗绿</view>
        <image class="choose_springgreen" wx:if="{{choose_springgreen}}" src="../../../utils/icon/choose.png"/>
      </view>
      <view class="watergreen" bindtap="watergreen">
        <view class="colorbox_watergreen"></view>
        <view class="text_watergreen">水碧绿</view>
        <image class="choose_watergreen" wx:if="{{choose_watergreen}}" src="../../../utils/icon/choose.png"/>
      </view>
    </view>
  </view>
</view>